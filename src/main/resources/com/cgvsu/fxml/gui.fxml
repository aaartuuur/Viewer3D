<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cgvsu.GuiController">
    <!-- style="-fx-background-color: #2e2e2e;" -->

    <MenuBar AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" text="Сохранить модель" />
                <MenuItem accelerator="Ctrl+T" mnemonicParsing="false" onAction="#onLoadTextureMenuItemClick" text="Загрузить тексутуру" />
            </Menu>
            <Menu mnemonicParsing="false" text="Camera Options">
                <MenuItem accelerator="W" mnemonicParsing="false" onAction="#handleCameraForw" text="Up" />
                <MenuItem accelerator="S" mnemonicParsing="false" onAction="#handleCameraBack" text="Down" />
                <MenuItem accelerator="A" mnemonicParsing="false" onAction="#A" text="Left" />
                <MenuItem accelerator="D" mnemonicParsing="false" onAction="#D" text="Right" />
                <MenuItem accelerator="Q" mnemonicParsing="false" onAction="#Q" text="Other" />
            </Menu>
            <Menu mnemonicParsing="false" text="Settings">
                <items>
                    <MenuItem mnemonicParsing="false">
                        <graphic>
                            <ToggleButton fx:id="themeToggle" text="Тёмная тема" />
                        </graphic>
                    </MenuItem>
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <!-- Canvas для отрисовки -->
    <Canvas fx:id="canvas" height="870" width="1600" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="25.0" />

    <!-- Правая панель управления с прокруткой -->
    <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="25.0">
        <content>
            <VBox spacing="0">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <TitledPane text="Модель">
                    <content>
                        <VBox prefHeight="100.0" prefWidth="100.0">
                            <children>
                                <ScrollPane prefHeight="200.0" prefWidth="200.0" minHeight="60">
                                    <content>

                                        <ListView fx:id="modelListView" prefHeight="200" />
                                    </content>
                                </ScrollPane>
                                <Button fx:id="addNewModelButton" text="Добавить новую" />
                                <Button fx:id="deleteModelButton" text="Удалить Модель" />
                                <VBox prefHeight="200.0" prefWidth="100.0">
                                    <children>
                                        <CheckBox fx:id="drawPolygonMeshCheckBox" mnemonicParsing="false" text="Рисовать полигональную сетку" />
                                        <CheckBox fx:id="useTextureCheckBox" mnemonicParsing="false" text="Использовать текстуру" />
                                        <CheckBox fx:id="useLightingCheckBox" mnemonicParsing="false" text="Использовать освещение" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane text="Камеры">
                    <content>
                        <VBox prefHeight="100.0" prefWidth="100.0">
                            <children>

                                      <HBox alignment="CENTER_LEFT">
                                    <Label text="Координаты:" />
                                    <TextField prefWidth="50" promptText="x" text="0" fx:id="xCoordinateField" />
                                    <TextField fx:id="yCoordinateField" prefWidth="50" promptText="y" text="0" />
                                    <TextField fx:id="zCoordinateField" prefWidth="50" promptText="z" text="50" />
                                </HBox>

                                                  <HBox alignment="CENTER_LEFT">
                                    <Label text="Направление:" />
                                    <TextField fx:id="dirXField" prefWidth="50" promptText="dirX" text="0" />
                                    <TextField fx:id="dirYField" prefWidth="50" promptText="dirY" text="0" />
                                    <TextField fx:id="dirZField" prefWidth="50" promptText="dirZ" text="0" />
                                </HBox>

                                <Button fx:id="addNewCameraButton" text="Добавить Новую Камеру" />
                                <Button fx:id="deleteCameraButton" text="Удалить Камеру" />
                        <ScrollPane prefHeight="200.0" prefWidth="200.0" minHeight="60">
                           <content>
      
                                            <ListView fx:id="cameraListView" prefHeight="200" />
                           </content>
                        </ScrollPane>

                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane text="Свет">
                    <content>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <ColorPicker fx:id="colorPicker" minHeight="25" />

                                <HBox alignment="CENTER_LEFT">
                                    <Label text="Координаты:" />
                                    <TextField prefWidth="50" promptText="x" text="0" fx:id="xCoordinateLight" />
                                    <TextField fx:id="yCoordinateLight" prefWidth="50" promptText="y" text="0" />
                                    <TextField fx:id="zCoordinateLight" prefWidth="50" promptText="z" text="50" />
                                </HBox>
                                <Slider fx:id="brightnessSlider" majorTickUnit="0.1" max="0.02" minorTickCount="0" showTickMarks="true" value="0.01" />
                                <Button fx:id="addNewLightButton" text="Добавить Новый свет" />
                            </children>
                        </VBox>
                    </content>
                </TitledPane>

                <TitledPane text="Трансформация 3D-моделей">
                    <VBox spacing="10">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                        <TitledPane collapsible="false" text="Rotation (X, Y, Z):">
                            <VBox spacing="10">
                                <TitledPane collapsible="false" text="X">
                                    <TextField fx:id="rotationXField" text="0" />
                                </TitledPane>
                                <TitledPane collapsible="false" text="Y">
                                    <TextField fx:id="rotationYField" text="0" />
                                </TitledPane>
                                <TitledPane collapsible="false" text="Z">
                                    <TextField fx:id="rotationZField" text="0" />
                                </TitledPane>
                            </VBox>
                        </TitledPane>

                        <TitledPane collapsible="false" text="Scale (X, Y, Z):">
                            <VBox spacing="10">
                                <TitledPane collapsible="false" text="X">
                                    <TextField fx:id="scaleXField" text="1" />
                                </TitledPane>
                                <TitledPane collapsible="false" text="Y">
                                    <TextField fx:id="scaleYField" text="1" />
                                </TitledPane>
                                <TitledPane collapsible="false" text="Z">
                                    <TextField fx:id="scaleZField" text="1" />
                                </TitledPane>
                            </VBox>
                        </TitledPane>

                        <TitledPane collapsible="false" text="Translation (X, Y, Z):">
                            <VBox spacing="10">
                                <TitledPane collapsible="false" text="X">
                                    <TextField fx:id="translationXField" text="0" />
                                </TitledPane>
                                <TitledPane collapsible="false" text="Y">
                                    <TextField fx:id="translationYField" text="0" />
                                </TitledPane>
                                <TitledPane collapsible="false" text="Z">
                                    <TextField fx:id="translationZField" text="0" />
                                </TitledPane>
                            </VBox>
                        </TitledPane>

                        <TitledPane text="Удаление">
                            <GridPane hgap="5" vgap="5">
                                <Label text="Удаление Вершин:" />
                                <TextField />
                                <Label text="Удаление Полигонов:" />
                                <TextField />
                        <columnConstraints>
                           <ColumnConstraints />
                        </columnConstraints>
                        <rowConstraints>
                           <RowConstraints />
                        </rowConstraints>
                            </GridPane>
                        </TitledPane>

                        <VBox spacing="5">
                            <Button text="Удалить" />
                            <Button fx:id="transformModel" text="Transform Model" />
                            <Button text="Сбросить Трансформации" />
                        </VBox>
                    </VBox>
                </TitledPane>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>
